<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="12dp"
    android:background="#1C2530"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgFrag"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/img_england"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/tvCountry"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tvCountry"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/plusjakartasans"
        android:gravity="center_vertical"
        android:paddingLeft="10sp"
        android:text="English"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imgFrag"
        app:layout_constraintRight_toRightOf="@+id/imgFrag"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/rdoButtton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/custom_radio_unselected"
        android:gravity="center"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>